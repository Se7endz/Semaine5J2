<%= form_for(:user, :url => session_path(:user)) do |f| %>
<div class="wrapper fadeInDown">
  <div id="formContent">
     <!-- Icon -->
    <div class="fadeIn first">
      <img src="https://cdn.pixabay.com/photo/2016/12/21/05/01/sign-up-1922238_960_720.png" id="icon" alt="User Icon" />
    </div><br><br><br><br><br>
</div>
  <div class="card card-signin my-5">
    <%= f.text_field :email, placeholder: 'example@example.com' %>
  </div>
  <div class="card card-signin my-5">
    <%= f.password_field :password %>
  </div>
  <div class="form-group">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
    <div id="formFooter">
      <a class="underlineHover" href="registration_path(resource_name)">Forgot Password?</a>
    </div>

  <%= f.submit 'Sign in', class: 'btn btn-primary' %>
  <%# link_to "Forgot your password?", new_password_path(:user) %>
<% end %>